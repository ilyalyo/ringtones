{% extends 'AppBundle::layout.html.twig' %}

{% block title %}
{% endblock%}
{% block page_title %}
    Blog
{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-10 col-md-offset-1">

        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Add</h3>
            </div>
            {{ form_start(form) }}
            <div class="box-body">
                {{ form_rest(form) }}
            </div>
            <div class="box-footer clearfix">

                <button type="reset" class="btn btn-warning pull-left margin">Reset</button>
                <a class="btn btn-warning margin" href="{{ path('ringtones') }}">Back</a>

                <button type="submit" class="btn btn-primary pull-right margin">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    Add</button>
            </div>
            {{ form_end(form) }}
        </div>

    </div>
</div>

{% endblock %}
